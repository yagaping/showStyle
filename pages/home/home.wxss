/* pages/home/home.wxss */
@import '../../template/list/list.wxss';
.main{
  overflow: hidden;
}
.banner{
  overflow: hidden;
  padding:3rpx;
}
.slide-image{
  width: 100%;
  height:160px;
  display: block;
}
.type{
  overflow: hidden;
  display: flex;
  background: #fefefe;
  padding:20rpx 0 15rpx;
}
.type .item{
  flex:1;
  text-align: center;
  font-size:24rpx;
  line-height: 1.6;
}
.type .item .text{
  padding:8rpx 0;
}
.type .item image{
  width:80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
}
.content{
  padding:10rpx 0 0;
}
